<body>
  <main>
    <header>Sudz</header>
    <h1>Create New User</h1>
    <form method ="POST" action="/users">
      <input type="text" name ="user[first_name]" placeholder="enter first name"><br>
      <input type="text" name="user[username]" placeholder="enter username"><br>
      <input type="email" name="user[email]" placeholder="enter email address"><br>
      <input type="password" minlength="4" name="user[password]" placeholder="create password"><br>
      <input type="submit" value="Create User">

    </form>

    <a href = "/users/login">Already have an account? Login</a>

  </main>

</body>
